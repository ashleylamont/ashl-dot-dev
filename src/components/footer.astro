---
import netscape from "../assets/netscape.png";
import { Image } from "astro:assets";
---

<div id="footer">
  <script>
    const ua = navigator.userAgent;
    const targetUA = "Mozilla/3.0 (compatible; Netscape Navigator 3.0; Samsung Smart Fridge)";
  
    if (ua === targetUA) {
      window.location.href = "/best-viewed-with";
    }
  </script>
  <div>
    This site is best viewed with NetScape Navigator 3.0 using a Samsung Smart
    Fridge <a href="https://www.destroyallsoftware.com/talks/wat"
      ><Image
        src={netscape}
        alt="NetScape Navigator 3 icon"
        height="16"
        style="margin: 0 10px;"
      />
    </a>
  </div>
  <div>
    <small
      >This site is not W3C compliant, and I'm ok with that.</small
    >
  </div>
</div>

<style>
  #footer {
    padding: 20px 0;
    background-color: rgba(0, 0, 0, 0.2);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #footer > div:first-child {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  @media (width < 768px) {
    div {
      text-align: center;
    }
    #footer {
      padding: 20px;
      max-width: 100vw;
      width: unset;
    }
  }
</style>
