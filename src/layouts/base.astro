---
import "@fontsource/rokkitt/400.css";
import "@fontsource/rokkitt/700.css";
import rokkittWoff2_400 from "@fontsource/rokkitt/files/rokkitt-latin-400-normal.woff2";
import rokkittWoff2_700 from "@fontsource/rokkitt/files/rokkitt-latin-700-normal.woff2";
import comingSoonWoff2 from "@fontsource/coming-soon/files/coming-soon-latin-400-normal.woff2";
import Footer from "../components/footer.astro";
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <!-- If we don't pre-load the main fonts then we get a ton of layout shifts after initial render -->
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={rokkittWoff2_400}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={rokkittWoff2_700}
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={comingSoonWoff2}
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? "Ashley's Corner"}</title>
    <meta
      name="description"
      content={description ??
        "The internet has many strange and wonderful corners, but this one is mine ðŸ¦„âœ¨"}
    />
    <style is:global>
      :root {
        font-size: 1.1rem;
      }

      * {
        font-family: "Rokkitt", serif;
      }

      @property --background {
        syntax: "<color>";
        inherits: false;
        initial-value: #242432;
      }

      body {
        background-color: var(--background);
        color: #d5cabd;
        margin: 0;
        position: relative;
        left: 0;
        top: 0;
        & > div {
          min-height: 100vh;
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          gap: 30px;
          & > div:first-child {
            padding: 20px;
          }
          & > * {
            flex-shrink: 1;
          }
        }
      }

      a {
        color: #f3beeb;
        text-decoration-style: dashed;
        text-decoration-thickness: from-font;

        &:hover {
          text-decoration-style: solid;
        }
      }

      @property --accent {
        syntax: "<color>";
        inherits: false;
        initial-value: #e987e0;
      }

      .accent {
        color: var(--accent);
      }

      article.main {
        flex-direction: column;
        display: flex;
        align-items: center;
        overflow-x: auto;
        & > * {
          max-width: 600px;
          &.wide {
            max-width: 1100px;
          }
        }
      }

      .tags {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.5em;
      }
      .tag {
        background-color: var(--accent);
        padding: 2px 5px;
        color: black;
      }

      /* Desktop-only and mobile-only styles */
      @media (width >= 768px) {
        .mobile-only {
          display: none !important;
        }
      }
      @media (width < 768px) {
        .desktop-only {
          display: none !important;
        }
      }

      [data-content-type="blog"] {
        img {
          border-radius: 10px;
          max-width: 75%;
          height: auto;
        }

        p:has(img) {
          display: flex;
          justify-content: center;
          align-items: center;
          gap: 5px;
          flex-direction: column;
          font-size: small;
          opacity: 0.8;
        }

        sup,
        sub {
          vertical-align: baseline;
          position: relative;
          top: -0.4em;
        }
        sub {
          top: 0.4em;
        }

        label:has(button) {
          cursor: pointer;
        }

        button {
          pointer-events: none;
          background-color: var(--accent);
          color: black;
          border: none;
          border-radius: 5px;
          &::after {
            content: "?";
          }
        }

        @media (pointer: coarse) {
          button {
            padding: 0.25rem 0.5rem;
            font-size-adjust: 0.5rem;
            font-weight: bold;
            margin-left: 0.5rem;
          }
        }
      }

      /* Make closely bundled buttons more spread out on touchscreen devices */
      .link-list > li {
        transition: margin 0.1s ease-in-out;
      }

      @media (pointer: coarse) {
        .link-list > li {
          margin: 0.5rem 0;
        }
      }
    </style>
  </head>
  <body>
    <div>
      <div>
        <slot />
      </div>
      <div>
        <Footer />
      </div>
    </div>
  </body>
</html>
