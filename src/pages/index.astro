<style>
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  hr {
    margin-top: 2rem;
    margin-bottom: 2rem;
    width: 50%;
    border: 1px solid var(--accent);
  }
  .triple-section {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 2rem;
    margin-left: 2rem;
    margin-right: 2rem;
    width: calc(100% - 4rem);
    & > * {
      display: flex;
      justify-content: start;
      align-items: center;
      flex-direction: column;
      text-align: justify;
      & > :first-child {
        border-bottom: 1px solid var(--accent);
        width: 100%;
        margin-bottom: 0.5rem;
        text-align: center;
      }
    }
  }
  ul,
  li {
    text-align: left;
  }
</style>
